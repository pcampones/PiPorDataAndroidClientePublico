<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.pedrocampons.pipordatawebserviceandroidpublico.MetodosAnoActivity"
    android:onClick="pesquisarBtn_onClick">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="date"
        android:ems="10"
        android:id="@+id/dataInicioEditText"
        android:layout_alignParentTop="true"
        android:hint="@string/dataInicioHint" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="date"
        android:ems="10"
        android:id="@+id/dataFimEditText"
        android:layout_below="@+id/dataInicioEditText"
        android:layout_alignParentStart="true"
        android:hint="@string/dataFimHint" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/pesquisaBtn"
        android:layout_alignBottom="@+id/dataFimEditText"
        android:layout_alignParentEnd="true"
        android:hint="@string/pesquisaHint"
        android:text="Pesquisar"
        android:onClick="pesquisarBtn_onClick" />

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/listView"
        android:layout_below="@+id/dataFimEditText"
        android:layout_alignRight="@+id/pesquisaBtn"
        android:layout_alignEnd="@+id/pesquisaBtn"
        android:visibility="visible" />
</RelativeLayout>
